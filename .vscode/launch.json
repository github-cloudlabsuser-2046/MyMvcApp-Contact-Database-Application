{
    "configurations": [
        {
            "type": "coreclr",
            "request": "launch",
            "name": "Launch MyMvcApp",
            "program": "${workspaceFolder}/bin/Debug/net8.0/MyMvcApp.dll",
            "args": [],
            "cwd": "${workspaceFolder}",
            "stopAtEntry": false,
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            },
            "sourceFileMap": {
                "/Views": "${workspaceFolder}/Views"
            }
        }
    ]
}